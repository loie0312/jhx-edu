.swiper {
  height: 500rpx;
}
.swiper-item {
  width: 100%;
}
.detail-items {
  border-bottom: 1px solid #f1f1f1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.detail-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
}
.detail-item .text {
  line-height: 80rpx;
  padding: 20rpx 0;
}
.active .text {
  border-bottom: 4rpx solid #ef7c38;
}
.detail {
  background-color: #fff;
  padding: 10rpx 0;
  margin-top: 15rpx;
}
.detail-content {
  padding: 20rpx 20rpx 0 20rpx;
}
.row {
  background-color: #fff;
  padding: 0 3%;
}
.product-name {
  padding: 20rpx 0 0 0;
  font-size: 32rpx;
  font-weight: bold;
}
.price-line {
  color: #ef7c38;
  padding: 20rpx 0 0 0;
}
.market-price {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 40rpx;
}
.attr-line {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0 0 0;
}
.attr-line ._span {
  margin-right: 40rpx;
}
.open-vip {
  background-color: #f9e5bf;
  padding: 20rpx 3%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.border-top {
  border-top: 1px solid #f1f1f1;
  margin-top: 20rpx;
}
.share-icon {
  position: fixed;
  right: 0;
  top: 650rpx;
  background-color: rgba(236, 236, 236, 0.6);
  padding: 10rpx 20rpx;
  -webkit-border-top-left-radius: 30rpx;
          border-top-left-radius: 30rpx;
  -webkit-border-bottom-left-radius: 30rpx;
          border-bottom-left-radius: 30rpx;
}
/*分享*/
#post-box {
  width: 80%;
  left: 10%;
  top: 5%;
  background-color: #fff;
  position: fixed;
  z-index: 1001;
}
.poster {
  width: 300px;
  height: 500px;
  border: 1px solid none;
  margin: 0 auto;
  background-color: #fff;
}
.maskLayer {
  left: 0;
  z-index: 1000;
}
.close {
  text-align: right;
  color: #999;
  font-size: 22px;
  background-color: #fff;
  border: 1px solid #ececec;
  position: absolute;
  top: -17px;
  right: -17px;
  width: 30px;
  height: 30px;
  line-height: 30px;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  text-align: center;
}
.save {
  background-color: #f9f9f9;
  color: #333;
  text-align: center;
  -webkit-border-radius: 30px;
          border-radius: 30px;
  padding: 15px 0;
  margin-top: 10px;
  line-height: 1;
  font-size: 28rpx;
}

