.wrap {
  background-image: -webkit-linear-gradient(top, #fee9a6, #fffdf3);
  background-image: linear-gradient(to bottom, #fee9a6, #fffdf3);
  height: 100vh;
}
.card-name {
  text-align: center;
  font-weight: bold;
  font-size: 32rpx;
  padding: 60rpx 0;
  color: #865400;
}
.main {
  background-color: #fff;
  width: 92%;
  margin: 0 auto;
  padding: 20rpx 25rpx 40rpx 25rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.vip-items {
  overflow: scroll;
  white-space: nowrap;
}
.vip-item {
  position: relative;
  width: 33%;
  display: inline-block;
  border: 1px solid #f1f1f1;
  margin-right: 20rpx;
  padding: 20rpx 20rpx;
  border-radius: 10rpx;
}
.vip-items .active {
  background-color: #fff9e0;
  border: 1px solid #ffbe3a;
}
.sub-title {
  font-weight: bold;
  padding: 20rpx 0;
  font-size: 30rpx;
}
.money {
  font-weight: bold;
  font-size: 50rpx;
}
.market-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.icon {
  position: absolute;
  bottom: 0;
  right: 0;
  color: #ffbe3a !important;
}
.pay-foot {
  position: fixed;
  bottom: 0;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  padding: 20rpx 3%;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  box-sizing: border-box;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.pay-btn {
  background-image: -webkit-linear-gradient(left, #f4cc38, #fae05f);
  background-image: linear-gradient(to right, #f4cc38, #fae05f);
  color: #333;
  border-radius: 30px;
  padding: 15rpx 50rpx;
}
.note {
  line-height: 43rpx;
}

