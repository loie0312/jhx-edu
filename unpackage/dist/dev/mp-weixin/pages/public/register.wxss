page {
  background-color: #fff;
}
.container {
  padding-top: 60px;
  position: relative;
  width: 100vw;
  /*height: 100vh;*/
  overflow: hidden;
  background: #fff;
}
.container .wrapper {
  position: relative;
  width: 100vw;
  z-index: 90;
  background: #fff;
  padding-bottom: 40rpx;
}
.container .wrapper .welcome {
  position: relative;
  top: -90rpx;
  color: #555;
  text-align: center;
}
.container .wrapper .input-content {
  padding: 0 60rpx;
}
.container .wrapper .input-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 0 30rpx;
  height: 120rpx;
  border-radius: 4px;
  margin-bottom: 50rpx;
  border-bottom: 1px solid #f1f1f1;
}
.container .wrapper .input-item:last-child {
  margin-bottom: 0;
}
.container .wrapper .input-item .tit {
  height: 50rpx;
  line-height: 56rpx;
}
.container .wrapper .input-item input {
  height: 60rpx;
  width: 100%;
}
.container .wrapper .input-item-sms-code {
  position: relative;
  width: 100%;
}
.container .wrapper .input-item-sms-code .sms-code-btn {
  position: absolute;
  color: #111;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 28rpx;
}
.container .wrapper .input-item-sms-code .sms-code-resend {
  color: #999;
}
.container .wrapper .input-item-sms-code .sms-code-btn:after {
  border: none;
  background-color: transparent;
}
.container .wrapper .forget-section {
  text-align: center;
  margin-top: 40rpx;
}
.container .back-btn {
  position: absolute;
  left: 40rpx;
  z-index: 9999;
  padding-top: 25px;
  top: 40rpx;
  font-size: 40rpx;
}
.container .left-top-sign {
  font-size: 120rpx;
  position: relative;
  left: -16rpx;
}
.container .right-top-sign {
  position: absolute;
  top: 80rpx;
  right: -30rpx;
  z-index: 95;
}
.container .register-section {
  margin: 30rpx 0 50rpx;
  width: 100%;
  text-align: center;
}
.container .register-section text {
  margin-left: 10rpx;
}
.footer {
  width: 100%;
  text-align: center;
  margin: 20rpx 0 20rpx;
}
.footer .protocol {
  margin: 0 10rpx;
}
.confirm-btn {
  width: 80%;
  background-color: #ef7c38;
  margin-top: 50rpx;
  color: #fff;
  border-radius: 30px;
}
.logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

