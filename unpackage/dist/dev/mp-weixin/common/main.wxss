.maskLayer {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  z-index: 9;
  background: rgba(0, 0, 0, 0.5);
  -webkit-animation: spin-opacity .2s linear;
  animation: spin-opacity .5s linear;
}
@-webkit-keyframes spin-opacity {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
@keyframes spin-opacity {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}

